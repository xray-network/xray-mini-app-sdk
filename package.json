{
  "name": "xray-mini-app-sdk-monorepo",
  "private": true,
  "version": "0.1.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "lint": "echo \"No lint configured\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,css,scss,html}\"",
    "serve:core": "yarn workspace xray-mini-app-sdk sandbox",
    "publish:core": "yarn workspace xray-mini-app-sdk publish --access public",
    "publish:react": "yarn workspace xray-mini-app-sdk-react publish --access public"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "serve": "^14.2.5",
    "typescript": "^5.4.0"
  }
}
